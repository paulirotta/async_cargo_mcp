            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Rust Check",
            "type": "shell",
            "command": "async-cargo-mcp check",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Rust Clippy",
            "type": "shell",
            "command": "async-cargo-mcp clippy",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Rust Test",
            "type": "shell",
            "command": "async-cargo-mcp test",
